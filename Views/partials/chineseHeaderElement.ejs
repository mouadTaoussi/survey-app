</div>
<style>
	.header-grid {
		padding-top: 8px;
		display: grid;
		grid-template-columns: 1fr 1.8fr;
		height: 100%;
	}
	.header-btn {
		color: var(--primary)
	}
	.avatar {
		border-radius: 10%;
		width: 35px;
		height: 35px;
	}
	.header-logo {
		margin:0px 0 0 0;
		position: absolute;
		left: 0;
	}
	.list-menu {
		color: white;
		list-style: none;
		margin:-.5px 0 0 0;
		position: absolute;
		right: 0;
	}
	.list-item {
		height:35px;display: inline;float: right;margin-top: 3.6px;
	}
	.avatar-and-btn-item {
		height:35px;display: inline;float: right
	}
	.sidebar-smaller-devices {
		position: absolute;
		top: 0;
		
		height: 100vh;
		width: 70%;
		background: white;
		z-index: 999;
		transition: all .2s ease-out;
		position: fixed;
	}
	.side-menu-items {
		margin: 15px;
	}
	#hamburger-menu {
		display: none;
	}
	.show-sidebar {
		left: 0%;
	}
	.hide-sidebar {
		left: -70%;
	}
	/**********************************/
	@media only screen and (max-width: 800px){
		.list-menu {
			display: none;
		}
		/*.header-grid {
			grid-template-columns: 1fr;
		}*/
		.header-logo {
			margin-top: 5px;
			width: 170px;
			height: 23px;
			display: none;
		}
		#hamburger-menu {
			margin-top: 5px;
			display: block;
		}
	}
/*	@media only screen and (min-width: 1000px){
		.header-grid {
			padding-top: .5%;
		}	
	}
	@media only screen and (min-width: 2000px){
		.header-grid {
			padding-top: .2%;
		}	
	}*/
</style>
<script>
	function toggleSideMenu(){
		const sideMenu = document.querySelector('.sidebar-smaller-devices');
		console.log(sideMenu.style.left)
		if (sideMenu.classList.contains('show-sidebar')) {
			sideMenu.classList.add('hide-sidebar');
			sideMenu.classList.remove('show-sidebar');
		}
		else if (sideMenu.classList.contains('hide-sidebar')) {
			sideMenu.classList.add('show-sidebar');
			sideMenu.classList.remove('hide-sidebar');
		}
	}
</script>