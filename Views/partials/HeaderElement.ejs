<header class="shadow local-navbar-2 local-navbar-primary">
	<div class="local-container-8 header-grid">
		<div >
			<div id="toggle-side-menu">
				<svg id="hamburger-menu" width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-justify" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				  <path fill-rule="evenodd" d="M2 12.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
				</svg>
			</div>
			<div class="header-logo"></div>
		</div>
		<ul class="list-menu">
			<li class="local-pr-2 local-pl-2 avatar-and-btn-item">
				<% if (avatar !== null) { %>
					<img class="avatar" src='<%= avatar %>'>
				<% } else { %>
					<img class="avatar" src=''>
				<% } %>
			</li>
			<li class="local-pr-2 local-pl-2 list-item"><a class="text-white" href="/auth/logout">Log out</a></li>
			<li class="local-pr-2 local-pl-2 list-item"><a class="text-white" href="/dashboard?lang=en">Dashboard</a></li>
			<li class="local-pr-2 local-pl-2 avatar-and-btn-item">
				<a href="/surveyEditor?lang=en">
					<button class="local-btn header-btn">Create one</button>
				</a>
			</li>
		</ul>
	</div>
</header>
<div class="sidebar-smaller-devices local-container-8 shadow hide-sidebar">
	<div class="side-menu-items">
		<div id="toggle-side-menu">
			<svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
			  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
			</svg>
		</div><br><br>
		<a class="text-dark" href="/dashboard?lang=en">Dashboard</a><br><br>
		<a class="text-dark" href="/surveyEditor?lang=en">Create ones</a><br><br>
		<a class="text-dark" href="/auth/logout">Log out</a><br><br>
		<a class="text-dark" href="/privacyPolicy?lang=en">Privacy & Policy</a><br><br>
		<a class="text-dark" href="/dashboard?lang=kr">한국어</a><br><br>
		<a class="text-dark" href="/dashboard?lang=cn">中文</a><br><br>
	</div>
</div>
<style>
	.header-grid {
		padding-top: 8px;
		display: grid;
		grid-template-columns: 1fr 1.8fr;
		height: 100%;
	}
	.header-btn {
		color: var(--primary)
	}
	.avatar {
		border-radius: 10%;
		width: 35px;
		height: 35px;
	}
	.header-logo {
		margin:0px 0 0 0;
		position: absolute;
		left: 0;
	}
	.list-menu {
		color: white;
		list-style: none;
		margin:-.5px 0 0 0;
		position: absolute;
		right: 0;
	}
	.list-item {
		height:35px;display: inline;float: right;margin-top: 3.6px;
	}
	.avatar-and-btn-item {
		height:35px;display: inline;float: right
	}
	.sidebar-smaller-devices {
		position: absolute;
		top: 0;
		
		height: 100vh;
		width: 70%;
		background: white;
		z-index: 999;
		transition: all .2s ease-out;
		position: fixed;
	}
	.side-menu-items {
		margin: 15px;
	}
	#hamburger-menu {
		display: none;
	}
	.show-sidebar {
		left: 0%;
	}
	.hide-sidebar {
		left: -70%;
	}

	
@media only screen and (max-width: 800px) {
	/*.header-grid {
		grid-template-columns: 1fr;
	}*/
	.header-logo {
		margin-top: 5px;
		width: 170px;
		height: 23px;
		display: none;
	}
	#hamburger-menu {
		margin-top: 5px!important;
		display: block;
	}
	.list-menu {
		display: none;
	}
}
</style>